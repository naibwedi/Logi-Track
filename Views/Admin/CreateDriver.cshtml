@model logirack.Models.ViewModel.CreateDriverViewModel

@{
    ViewBag.Title = "Create Driver";
    Layout = "_Layout";
}

<h2>Create Driver</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="CreateDriver" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DriverEmail"></label>
        <input asp-for="DriverEmail" class="form-control" />
        <span asp-validation-for="DriverEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PricePerKm"></label>
        <input asp-for="PricePerKm" class="form-control" />
        <span asp-validation-for="PricePerKm" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PaymentFreq"></label>
        <select asp-for="PaymentFreq" class="form-control" asp-items="Html.GetEnumSelectList<logirack.Models.PaymentFreq>()"></select>
        <span asp-validation-for="PaymentFreq" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DriverPassword"></label>
        <input asp-for="DriverPassword" type="password" class="form-control" />
        <span asp-validation-for="DriverPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create Driver</button>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
