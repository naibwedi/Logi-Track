@model IEnumerable<logirack.Models.ViewModel.TripDetailsViewModel>

<h2>Admin Trip Log</h2>

<table class="table">
    <thead>
    <tr>
        <th>Trip ID</th>
        <th>Customer Name</th>
        <th>From</th>
        <th>To</th>
        <th>Distance (km)</th>
        <th>Weight (kg)</th>
        <th>Pickup Date</th>
        <th>Status</th>
        <th>Admin Price</th>
        <th>Estimated Price</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var trip in Model)
    {
        <tr>
            <td>@trip.TripId</td>
            <td>@trip.CustomerName</td>
            <td>@trip.FromCity</td>
            <td>@trip.ToCity</td>
            <td>@trip.Distance</td>
            <td>@trip.Weight</td>
            <td>@trip.PickupDate.ToString("dd MMM yyyy")</td>
            <td>@trip.Status</td>
            <td>@trip.AdminPrice.ToString("C")</td>
            <td>@trip.EstimatedPrice.ToString("C")</td>
        </tr>
    }
    </tbody>
</table>

@if (!Model.Any())
{
    <p>No trips available.</p>
}