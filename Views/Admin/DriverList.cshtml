@model IEnumerable<logirack.Models.Driver>

@{
    ViewBag.Title = "Driver List";
    Layout = "_Layout";
}

<h2>Driver List</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<a asp-action="CreateDriver" class="btn btn-primary mb-3">Create New Driver</a>

<table class="table table-striped">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Price per Km</th>
        <th>Payment Frequency</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var driver in Model)
    {
        <tr>
            <td>@driver.FirstName</td>
            <td>@driver.LastName</td>
            <td>@driver.Email</td>
            <td>@driver.PhoneNumber</td>
            <td>@driver.PricePerKm</td>
            <td>@driver.PaymentFreq</td>
            <td>
                <a asp-action="EditDriver" asp-route-id="@driver.Id" class="btn btn-warning btn-sm">Edit</a>
                <form asp-action="DeleteDriver" asp-route-id="@driver.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this driver?');">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}