<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - logirack</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/navBar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/logirack.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="con container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item admin-dashboard">
                                <a class="nav-link text-dark">Admin</a>
                            </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="DriverManagment">Driver Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="AddNewTrip">Add New Trip</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="" asp-action="">Invoice Generation</a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="" asp-action="">Payment Management</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="PendingApprovals">Pending Approval</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="TripDetails">Trips Details</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="TripRequests">Trips Request</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="DriverList"> Driver list</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="CreateDriver"> create a driver</a>
                            </li>
                        }
                        else if (User.IsInRole("Driver"))
                        {
                            <li class="nav-item driver-dashboard">
                                <a class="nav-link text-dark">Driver</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Driver" asp-action="Dashboard">Driver Dashboard</a>
                            </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="" asp-action="">Trip Log</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="" asp-action="">View Invoices</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="" asp-action="">Payment Tracking</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="" asp-action="">Driver Trip Management</a>
                        </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a id="LogiTrack" class="nav-link text-white" asp-controller="Home" asp-action="Index">LogiTrack</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a  class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Contact</a>
                        </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>