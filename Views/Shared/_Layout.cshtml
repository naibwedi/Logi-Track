<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - logirack</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/logirack.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.IsInRole("Admin"))
                        {
						@:Freight Management System
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="" asp-action="">Driver Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="" asp-action="">Add New Trip</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="" asp-action="">Invoice Generation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="" asp-action="">Payment Management</a>
                        </li>
                        }
                        else if (User.IsInRole("Driver"))
                        {
						@:Driver Dashboard
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Driver" asp-action="Dashboard">Trip Log</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="" asp-action="">View Invoices</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="" asp-action="">Payment Tracking</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="" asp-action="">Driver Trip Management</a>
                        </li>
                        }
                        else
                        {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - logirack - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
