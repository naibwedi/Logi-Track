@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-fullscreen">
    <h1>Dashboard</h1>
    <p>Welcome, @User.Identity.Name!</p>
    <div class="button-group">
        <a asp-action="CreateTrip" class="btn btn-primary">Create New Trip</a>
        <a asp-action="MyTrips" class="btn btn-secondary">View My Trips</a>
        <form asp-action="CustomerDelete" method="post" onsubmit="return confirmDelete()" style="display: inline;">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-secondary">Delete Account</button>
        </form>
    </div>
</div>

<link rel="stylesheet" href="/css/Dashboard.css">