{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=LogiTruk.db",
    "PostgreSQLConnection": "Host=${POSTGRES_HOST};Port=${POSTGRES_PORT};Database=${POSTGRES_DB};Username=${POSTGRES_USER};Password=${POSTGRES_PASSWORD}"
  },
  "SendGrid": {
    "ApiKey": "${SendGrid__ApiKey}",
    "SenderEmail": "${SendGrid__SenderEmail}", 
    "SenderName": "${SendGrid__SenderName}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Endpoints": {
    "AppConfig": "https://logitruck2.azconfig.io"
  }
}
